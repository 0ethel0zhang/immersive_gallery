{
  "name": "infinite-canvas",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"vite --host\" \"tsx watch --env-file .env server/index.ts\"",
    "build": "tsc -b && vite build",
    "check:types": "tsc --noEmit -p tsconfig.app.json",
    "check:biome": "biome lint --diagnostic-level=error --no-errors-on-unmatched --files-ignore-unknown=true",
    "check": "npm run check:types && npm run check:biome",
    "lint": "npm run check:biome",
    "format": "biome check --write --unsafe",
    "preview": "vite preview"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "0.57.0",
    "@copilotkit/react-core": "1.51.1",
    "@copilotkit/runtime": "1.51.1",
    "@copilotkit/runtime-client-gql": "1.51.1",
    "@react-three/drei": "10.7.7",
    "@react-three/fiber": "9.4.2",
    "cors": "2.8.6",
    "express": "5.2.1",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "three": "0.182.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@types/cors": "2.8.19",
    "@types/express": "5.0.6",
    "@types/node": "25.3.0",
    "@types/react": "19.2.14",
    "@types/react-dom": "19.2.3",
    "@types/three": "0.182.0",
    "@vitejs/plugin-react": "5.1.4",
    "babel-plugin-react-compiler": "1.0.0",
    "concurrently": "9.2.1",
    "tsx": "4.21.0",
    "typescript": "5.9.3",
    "vite": "7.3.1"
  }
}
